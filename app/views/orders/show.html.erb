<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h3>Thank you for your order!</h4>
    <h4>Email Address: <%=@order.email%><h5>
    <h4>Total Price: <%=humanized_money_with_symbol @order.total_cents%><h5>
  </header>

  <div class="order-summary jumbotron">
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each_with_index do |item, index| %>
        <%#item.inspect%>
          <%= render 'item', product: @order.products[index], quantity: item[:quantity].to_i%>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol cart_subtotal_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
