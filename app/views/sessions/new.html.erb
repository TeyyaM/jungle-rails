<h1>Login</h1>

<section class="sessions-new">

  <header class="page-header">
    <h1>Welcome &raquo; Return to the Jungle!</h1>
  </header>

  <div class="well">
    Don't have an account? <%= link_to 'Register', '/signup', class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :session, url: '/login' do |form| %>
      <% if @message %>
        <div class="alert alert-danger">
          <strong><%= @message %></strong>
        </div>
      <% end %>

        <div class="form-group">
          <%= form.label 'Email:' %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label 'Password:' %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

        <%= form.submit 'Login', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
